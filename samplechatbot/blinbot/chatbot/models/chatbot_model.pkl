from sklearn.svm import SVC
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.pipeline import make_pipeline
import joblib

# Sample training data
X_train = ["Hello", "How are you?", "What is your name?", "Goodbye"]
y_train = ["greeting", "question", "question", "farewell"]

# Create a pipeline with a vectorizer and a classifier
pipeline = make_pipeline(TfidfVectorizer(), SVC(kernel='linear'))

# Train the model
pipeline.fit(X_train, y_train)

# Save the model
joblib.dump(pipeline, 'chatbot_model.pkl')
